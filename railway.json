{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "dockerfilePath": null
  },
  "deploy": {
    "startCommand": "cd backend/models && /app/venv/bin/gunicorn --config gunicorn_config.py pytorch_service:app",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
